datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int      @id @default(autoincrement())
  employeeNumber  String   @unique
  password        String
  email           String   @unique
  fingerprintHash String? // To store fingerprint hash (optional)
  createdAt       DateTime @default(now())
}
